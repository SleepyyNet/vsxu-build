

glfw:
TARGET=i686-w64-mingw32- PREFIX=~/vsxu/build-dependencies-mingw-install/ make cross-mgw-install

glew:
GLEW_DEST=~/vsxu/build-dependencies-mingw-install/ make SYSTEM=linux-i686-w64-mingw32 install

jpeg:
./configure --host=i686-w64-mingw32 --prefix=/home/jaw/vsxu/build-dependencies-mingw-install
make
make install

zlib:
cd zlib
mingw ./configure --prefix=/home/jaw/vsxu/build-dependencies-mingw-install
1. now edit the file to remove the shared libs from compilation and installation.
  Near the top of the file:
  - LIBS=$(STATICLIB) $(SHAREDLIB)
  + LIBS=$(STATICLIB)
  In the "install-libs" target, comment out the following lines:
    -@if [ ! -d $(DESTDIR)$(sharedlibdir) ]; then mkdir -p $(DESTDIR)$(sharedlibdir); fi
    cp $(SHAREDLIBV) $(DESTDIR)$(sharedlibdir)
    -@cd $(DESTDIR)$(sharedlibdir); if test "$(SHAREDLIBV)" -a -f $(SHAREDLIBV); then \
      chmod 755 $(SHAREDLIBV); \
      rm -f $(SHAREDLIB) $(SHAREDLIBM); \
      ln -s $(SHAREDLIBV) $(SHAREDLIB); \
      ln -s $(SHAREDLIBV) $(SHAREDLIBM); \
      ($(LDCONFIG) || true)  >/dev/null 2>&1; \
    fi

  mingw make
  mingw make install
2. in the installed dir, comment out the ZLIB_DLL part in the zconf.h since we couldn't build that anyway.

png: 
  cd png
  mkdir build
  cd build
  cmake -DCMAKE_TOOLCHAIN_FILE=~/vsxu/Toolchain-mingw32.cmake -DCMAKE_INSTALL_PREFIX=~/vsxu/build-dependencies-mingw-install/ ..
  make

pthreads:
  - edit the pthread.h and comment out the struct_timespec struct.
  make -f GNUmakefile CROSS=i686-w64-mingw32- GC-inlined
  
  GNUmakefile has no install target; copy the following files:
  pthreadGC2.dll -> bin
  libpthreadGC2.a -> lib
  pthread.h -> include
  sched.h -> include
  semaphore.h -> include





